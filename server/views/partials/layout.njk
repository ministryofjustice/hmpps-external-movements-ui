{% extends "govuk/template.njk" %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "partials/miniProfile/macro.njk" import miniProfile %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block head %}
  <link href="{{ '/assets/css/index.css' | assetMap }}" rel="stylesheet"/>

  {% for js in feComponents.jsIncludes %}
    <script src="{{ js }}" nonce="{{ cspNonce }}"></script>
  {% endfor %}

  {% for css in feComponents.cssIncludes %}
    <link href="{{ css }}" nonce="{{ cspNonce }}" rel="stylesheet"/>
  {% endfor %}
{% endblock %}

{% block pageTitle %}{{pageTitle or "Reception and External Movements"}} - DPS{% endblock %}

{% block header %}
  {{ feComponents.header | safe }}
{% endblock %}

{% block beforeContent %}
  {% if backUrl %}
    {{ govukBackLink({
      text: backLabel or "Back",
      href: backUrl
    }) }}
  {% endif %}

  {% if showBreadcrumbs and breadcrumbs and(not backUrl) %}
    <div class="csip-breadcrumbs govuk-!-display-none-print">
      <div class="csip-breadcrumbs__breadcrumbs">
        {{ govukBreadcrumbs({
          items: breadcrumbs.items
        }) }}
      </div>
    </div>
  {% endif %}

  {% set errorSummaryList = validationErrors | buildErrorSummaryList %}
  {% if errorSummaryList.length > 0 %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: (errorSummaryList | customErrorOrderBuilder(customErrorOrder)) if customErrorOrder else errorSummaryList,
          classes: 'govuk-!-margin-top-3 govuk-!-margin-bottom-0'
        }) }}
      </div>
    </div>
  {% endif %}

  {% if prisonerDetails %}
    {{ miniProfile(prisonerDetails, prisonerProfileUrl) }}
  {% endif %}

  {% block pageHeader %}{% endblock %}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-body {% if fullWidth %}govuk-grid-column-full{% else %}govuk-grid-column-two-thirds{% endif %}">
    {% block innerContent %}{% endblock %}
  </div>
</div>
{% endblock %}

{% block footer %}
  {{ feComponents.footer | safe }}
{% endblock %}

{% block bodyEnd %}
  {% if sentry and sentry.loaderScriptId %}
    <script nonce="{{ cspNonce }}">
      window.sentryOnLoad = function() {
        Sentry.init({
          release: "hmpps-external-movements-ui@{{ version }}",
          environment: "{{ sentry.environment }}",
          tracesSampleRate: {{ sentry.tracesSampleRate }},
          replaysSessionSampleRate: {{ sentry.replaySampleRate }},
          replaysOnErrorSampleRate: {{ sentry.replayOnErrorSampleRate }},
          initialScope: {
            user: { username: "{{ user.username }}" },
          },
        });
      };
    </script>
    <script src="https://js.sentry-cdn.com/{{ sentry.loaderScriptId }}.min.js" nonce="{{ cspNonce }}" crossorigin="anonymous"></script>
  {% endif %}
  <script nonce="{{ cspNonce }}">
    document.addEventListener('DOMContentLoaded', function () {
      try { const history = JSON.parse(atob("{{ b64History }}") || '[]');
        if (!history.length) {
          return
        }

        document.querySelectorAll('a[href]')
          .forEach(function (link) {
            if (link.href.startsWith(window.location.origin)) {
              const url = new URL(link.href, window.location.origin);
              if (!url.searchParams.get('history')) {
                const urlHistory = [...history, link.href.replace(window.location.origin, '')]
                url.searchParams.set('history', btoa(JSON.stringify(urlHistory)))
              }
              link.href = url.pathname + url.search + url.hash;
            }
          });
      } catch(e) {
        console.error(`Error decoding history: ${e}`)
      }
    });
  </script>
  <script type="module" src="{{ '/assets/js/index.js' | assetMap }}"></script>
{% endblock %}
