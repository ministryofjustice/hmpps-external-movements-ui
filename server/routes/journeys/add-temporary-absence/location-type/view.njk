{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "partials/layout.njk" %}

{% set pageTitle = "Select location type - Add a temporary absence" %}

{% block innerContent %}
    <span class="govuk-caption-l">Add a temporary absence</span>
    <form method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
        {{ govukRadios({
            fieldset: {
                legend: {
                    text: "What type of location will " + prisonerDetails | firstNameSpaceLastName + " be going to?",
                    isPageHeading: true,
                    classes: "govuk-fieldset__legend--l"
                }
            },
            id: "locationType",
            name: "locationType",
            items: locationTypeOptions | fromRefData | setCheckedValue(locationType),
            errorMessage: validationErrors | findError('locationType')
        }) }}
        {{ govukButton({
            text: "Continue",
            preventDoubleClick: true
        }) }}
    </form>
{% endblock %}
