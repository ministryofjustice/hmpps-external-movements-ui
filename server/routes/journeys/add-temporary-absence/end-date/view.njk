{% extends "partials/layout.njk" %}
{% from "moj/components/date-picker/macro.njk" import mojDatePicker %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "partials/validatedTimeInput/macro.njk" import validatedTimeInput %}

{% set pageTitle = 'Enter absence end date and time - Add a temporary absence' %}

{% block innerContent %}
  <div class="govuk-width-container">
    <span class="govuk-caption-l">Create a Temporary Absence</span>
    <h1 class="govuk-heading-l">Add absence details</h1>
    <form method="post">
      <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
      {{ mojDatePicker({
        id: "returnDate",
        name: "returnDate",
        label: {
          text: 'What date will ' + prisonerDetails | firstNameSpaceLastName + ' return to prison?',
          classes: "govuk-fieldset__legend--m"
        },
        hint: {
          text: 'For example, 17/5/2024.'
        },
        value: returnDate,
        errorMessage: validationErrors | findError('returnDate'),
        classes: 'hmpps-datepicker--fixed-width govuk-body',
        minDate: startDate | formatInputDate
      }) }}

      {{ validatedTimeInput({
        id: "returnTime",
        name: "returnTime",
        classes: 'govuk-!-static-margin-bottom-6',
        fieldset: {
          legend: {
            text: 'What time will ' + prisonerDetails | firstNameSpaceLastName + ' return to prison?',
            classes: "govuk-fieldset__legend--m"
          }
        },
        hint: {
          text: 'Use the 24-hour clock. For example, 09 08 or 17 32.'
        },
        validationErrors: validationErrors,
        hour: returnTimeHour,
        minute: returnTimeMinute
      }) }}

      {{ govukButton({
        text: "Continue",
        preventDoubleClick: true
      }) }}
    </form>
  </div>
{% endblock %}
