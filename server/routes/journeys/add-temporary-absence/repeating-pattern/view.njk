{% extends "partials/layout.njk" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = 'Enter repeating pattern - Add a temporary absence' %}

{% block innerContent %}
  <div class="govuk-width-container">
    <span class="govuk-caption-l">Create a Temporary Absence</span>
    <form method="post">
      <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
      {{ govukRadios({
        name: "patternType",
        errorMessage: validationErrors | findError('patternType'),
        fieldset: {
          legend: {
            text: 'How will the occurrences of this absence repeat?',
            isPageHeading: true,
            classes: "govuk-fieldset__legend--xl"
          }
        },
        items: [
          {
            value: 'FREEFORM',
            text: "Does not repeat in a regular pattern",
            hint: {
              text: "Enter the individual dates and times for each absence occurrence."
            }
          },
          {
            value: 'WEEKLY',
            text: "Repeats weekly",
            hint: {
            text: "Enter the days and times for absences that will take place at the same days and times each week."
          }
          },
          {
            value: 'BIWEEKLY',
            text: "Repeats every 2 weeks",
            hint: {
            text: "Enter the days and times for absences that repeat in 2 alternating weeks."
          }
          },
          {
            value: 'SHIFT',
            text: "Repeats in a custom pattern",
            hint: {
              text: "Enter the days and times for a shift-type pattern. For example, 3 days on, 3 days off."
            }
          }
        ] | setCheckedValue(patternType)
      }) }}

      {{ govukButton({
        text: "Continue",
        preventDoubleClick: true
      }) }}
    </form>
  </div>
{% endblock %}
