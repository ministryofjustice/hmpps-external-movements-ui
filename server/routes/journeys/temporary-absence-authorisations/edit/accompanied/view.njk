{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "partials/layout.njk" %}

{% set pageTitle = "Select who will accompany the prisoner - Manage temporary absences" %}

{% block innerContent %}
    <span class="govuk-caption-l">Manage Temporary Absences</span>
    <form method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
        {{ govukRadios({
            fieldset: {
                legend: {
                    text: "Who will accompany " + (prisonerDetails | firstNameSpaceLastName) + "?",
                    isPageHeading: true,
                    classes: "govuk-fieldset__legend--l"
                }
            },
            id: "accompaniedBy",
            name: "accompaniedBy",
            items: accompaniedByOptions | fromRefData | setCheckedValue(accompaniedBy),
            errorMessage: validationErrors | findError('accompaniedBy')
        }) }}
        {{ govukButton({
            text: "Continue",
            preventDoubleClick: true
        }) }}
    </form>
{% endblock %}
